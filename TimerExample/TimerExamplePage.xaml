<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:TimerExample" x:Class="TimerExample.TimerExamplePage">
    <StackLayout VerticalOptions="Center">
        <Label 
            x:Name="timeLabel" 
            Text="Time" 
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="60"/>
        <Button 
            VerticalOptions="End" 
            HorizontalOptions="Center" 
            Text="Start Time"
            WidthRequest="300"
            HeightRequest="100"
            Clicked="StartTimer_Clicked"/>

    </StackLayout>
</ContentPage>
